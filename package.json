{
  "name": "go-results-highlighter",
  "version": "0.0.1",
  "description": "Improves readability of Go results by highlighting opponents of selected player",
  "main": "index.js",
  "scripts": {
    "css": "lessc --clean-css src/plugin.less > dist/go-results-highlighter.css",
    "build": "browserify src/index.js -s GoResultsHighlighter -d -t babelify > dist/go-results-highlighter.js",
    "uglify": "uglifyjs dist/go-results-highlighter.js > dist/go-results-highlighter.min.js",
    "start": "http-server . -c -1 -p 3015 -o http://127.0.0.1:3015/examples/example.htm",
    "prestart": "npm run build && npm run css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Artur Barcicki <barcicki@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babelify": "^6.4.0",
    "browserify": "^12.0.1",
    "less": "^2.5.3",
    "less-plugin-clean-css": "^1.5.1",
    "minifyify": "^7.1.0",
    "http-server": "^0.8.5",
    "uglifyjs": "^2.4.10"
  }
}
